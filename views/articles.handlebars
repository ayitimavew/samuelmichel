
<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Espas {{categorie}}</h1>
        <hr>
    </div>
</div>

 {{#if message}}
  <br>
  <br>
  <br>
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-center text-danger">{{message}} </h1>
            <br>
          </div>
    </div>
    {{/if}}

{{#each articles}}

<div class="container">
    <div class="row product" style="margin-bottom:50px;">
    <div class="col-md-4 col-md-offset-1"><img style="width:300px; height:300px;" class="img-responsive" src={{this.image}}></div>
    <div class="col-md-7">
        <h2> {{this.titre}}</h2>
        <p>{{this.nomAuteur}}  {{this.prenomAuteur}} - {{dateFormat date "d/M/YYYY, h:mm:ss a"}}</p>
        {{{trimString this.contenu}}}
        <br>
        <br>
      <a href="/lire/{{this._id}}" class="btn btn-primary" type="button">Li atik lan </a>
    </div>
    <hr>
</div>
</div>
{{/each}}

<br><br>
  
  <div class="container">
      {{#if showPagination}}
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li>
          <a href="/editorial/{{previous}}" aria-label="Précédent">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
       {{#each pages}}
        <li><a href="/editorial/{{this}}">{{this}}</a></li>
        {{/each}}
    
        <li>
          <a href="/editorial/{{next}}" aria-label="Suivant">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
    
    {{/if}}
  </div>