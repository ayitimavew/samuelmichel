<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Mes annonces</h1>
        <hr>
    </div>
</div>
 {{#if message}}
  <br>
  <br>
  <br>
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-center text-danger">Aucun annonces pour l'instant </h1>
            <br>
           <a href="/annonce"> <h4 class="text-center text-center text-danger">Ecrire une annonce</h4></a>
        </div>
    </div>
    {{/if}}

{{#each annonces}}
<div class="row product" style="margin-bottom:50px;">
    <div class="col-md-4 col-md-offset-1"><img style="width:300px; height:300px;" class="img-responsive" src={{this.image}}></div>
    <div class="col-md-7" style="word-wrap:break-word">
        <h2>{{this.titre}} </h2>
      
        <p>{{this.description}}</p>
        <br>
        <a href="/delete/annonce/{{this._id}}" class="btn btn-primary" type="button">Supprimer </a>
    </div>
    <hr>
</div>
{{/each}}

<br><br>
  
  <div class="container">
      {{#if showPagination}}
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li>
          <a href="/commercial/{{previous}}" aria-label="Précédent">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
       {{#each pages}}
        <li><a href="/commercial/{{this}}">{{this}}</a></li>
        {{/each}}
    
        <li>
          <a href="/commercial/{{next}}" aria-label="Suivant">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
    
    {{/if}}
  </div>