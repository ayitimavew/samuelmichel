
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center text-primary">Ecrire un article</h2>
            <h3 class="text-center text-danger">{{message}}</h3>
            <form method="post" action="/editeur">
                <div class="form-group">
                    <label class="control-label">Titre </label>
                    <input name="titre" class="form-control" type="text">
                </div>
                <div class="form-group">
                    <label class="control-label">Ajouter un lien image </label>
                    <input name="image" class="form-control" type="text">
                    <a style="color:red;" target="_blank" href="/gallerie/1"> ! selectionner un lien image</a>
                </div>
                <div class="form-group">
                    <label class="control-label">Categorie </label>
                    <select name="categorie" class="form-control">
                        
                    {{#each categories}}
                        <option value="{{ this.titre }}">{{this.titre}}</option>
                    {{/each}}

                        
                    
                    </select>
                </div>
                <br>
                <hr>
                        <textarea name="contenu">
                               
                        </textarea>
                <br>
                <hr>
                <button class="btn btn-success pull-right" type="submit">Publier</button>
            </form>
        </div>
    </div>
</div>

