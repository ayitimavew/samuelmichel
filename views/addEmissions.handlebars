
<div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
           
                <h2>Ajouter une Emission</h2>
                
                {{#if message}}
                <h1 class="text-center">{{message}} </h1>
                {{/if}}
                
                <br>
   
                <form method="POST" action="/add-emission" class="form-inline">
                <div class="form-group">
                    <input type="text" name="link" class="form-control" id="rubrique" >
                </div>
                
                <button type="submit" class="btn btn-primary"> Ajouter</button>
                </form>

                <br>
                <br>
                <hr>
        </div>
</div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
            {{#each emissions}}
                <iframe width="100%" height="120" src={{this.link}} frameborder="0" ></iframe>
            {{/each}}
            
        </div>
    </div>

      <div class="container">
      {{#if showPagination}}
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li>
          <a href="/add/emission/{{previous}}" aria-label="Précédent">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
       {{#each pages}}
        <li><a href="/add/emission/{{this}}">{{this}}</a></li>
        {{/each}}
    
        <li>
          <a href="/add/emission/{{next}}" aria-label="Suivant">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
    
    {{/if}}
  </div>

    




