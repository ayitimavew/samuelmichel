
<div class="row">
    <div class="col-md-12">
        <h1 class="text-center">Liste des Dons </h1>
        <hr>
    </div>
</div>
  {{#if message}}
  <br>
  <br>
  <br>
    <div class="row">
        <div class="col-md-12">
            <h1 class="text-center text-center text-danger">Aucun Donnations pour l'instant </h1>
            <br>
        </div>
    </div>
    {{/if}}

{{#each donnations}}

<div class="container">
    <div class="row product wells" style="margin-bottom:50px;">
    <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
        <p><h2>{{this.nom}}  {{this.prenom}}</h2</p>
        <br>
        <p><h3>{{this.phone}}</h3></p> <br>
        <p>{{dateFormat date "d/M/YYYY, h:mm:ss a"}}</p> <br>
        <h4>{{{trimString this.description}}}</h4>
        <br>
        <br>
    </div>
      <hr style=" width:82%; height:3px; background-color:#bf3e11;">
</div>
</div>
{{/each}}

<br><br>
  
  <div class="container">
      {{#if showPagination}}
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li>
          <a href="/show/donnations/{{previous}}" aria-label="Précédent">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
       {{#each pages}}
        <li><a href="/show/donnations/{{this}}">{{this}}</a></li>
        {{/each}}
    
        <li>
          <a href="/show/donnations/{{next}}" aria-label="Suivant">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
    
    {{/if}}
  </div>