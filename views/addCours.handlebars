 <div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Ajouter un Cours</h1></div>
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 col-sm-10 col-sm-offset-1 col-xs-10 col-xs-offset-1">
            <form method="POST" action="/cours">
                <div class="form-group">
                    <label class="control-label">Image cours</label>
                    <input name="image" class="form-control" type="text"><a  target="_blank" href="/gallerie/1">! selectionner un image dans la gallerie</a></div>

                 <div class="form-group">
                    <label class="control-label">Titre cours</label>
                    <input name="titre" class="form-control" type="text"></div>

                <div class="form-group">
                    <label class="control-label">Description du cours</label>
                    <textarea name="description" class="form-control"></textarea>
                </div>
                <button class="btn btn-default pull-right" type="submit">Button</button>
            </form>
        </div>
    </div>
    <br><br>
    <hr>
     {{#each cours}}
         <div class="row" style="margin-bottom:50px;">
            <div style="margin-bottom:20px;" class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
                <div class="card">
                    <div class="card-image"><img width="300px" height="300px" class="img-responsive" src={{this.image}}><span class="card-title"><h3>{{this.titre}}</h3></span></div>
                    <br><br>
                    <div style="word-wrap:break-word"  class="card-content">
                        {{this.description}}
                        <br>
                        <a href="/voir-cour/{{this._id}}" class="btn btn-default pull-left" >Voir</a>
                        <a href="/delete/cours/{{this._id}}" class="btn btn-default pull-right" type="submit">Supprimer</a>
                    </div>
                </div>
            </div>
              <hr style=" width:70%; height:3px; background-color:#bf3e11;">
        </div>
     {{/each}}


    <div class="container">
      {{#if showPagination}}
    <nav aria-label="Page navigation">
      <ul class="pagination">
        <li>
          <a href="/add-cours/{{previous}}" aria-label="Précédent">
            <span aria-hidden="true">&laquo;</span>
          </a>
        </li>
       {{#each pages}}
        <li><a href="/add-cours/{{this}}">{{this}}</a></li>
        {{/each}}
    
        <li>
          <a href="/add-cours/{{next}}" aria-label="Suivant">
            <span aria-hidden="true">&raquo;</span>
          </a>
        </li>
      </ul>
    </nav>
    
    {{/if}}
  </div>