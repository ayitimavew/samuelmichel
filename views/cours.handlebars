
<div class="row">
        <div class="col-md-12">
            <h1 class="text-center">Kou </h1></div>
    </div>

{{#each cours}}
        <div class="row" style="margin-bottom:50px;">
            <div class="col-md-8 col-md-offset-2 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
                <div class="card">
                     <div class="card-image"><img width="300px" height="300px" class="img-responsive" src={{this.image}}><span class="card-title"><h3>{{this.titre}}</h3></span></div>
                    <br><br>
                    <div style="word-wrap:break-word"  class="card-content">
                        {{this.description}}
                        <br>
                        <a href="/detail-cours/{{this._id}}" class="btn btn-default pull-left" >Voir</a>
                      
                    </div>
                </div>
            </div>
        </div>
{{/each}}

