

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2 class="text-center text-primary">Modifier un article</h2>
            <h3 class="text-center text-danger">{{message}}</h3>
            <form method="post" action="/modifier/article/{{article._id}}">
                <div class="form-group">
                    <label class="control-label">Titre </label>
                    <input name="titre"  class="form-control" id="titre-input" type="text"/>
                    <p style="display:none;" class="titre">{{article.titre}}</p>
                </div>
                <div class="form-group">
                    <label class="control-label">Ajouter un lien image </label>
                    <input name="image"  class="form-control" id="image-input" type="text">
                    <a style="color:red;" target="_blank" href="/gallerie/1"> ! selectionner un lien image</a>
                    <p style="display:none;" class="image">{{article.image}}</p>
                </div>
                <div class="form-group">
                    <label class="control-label">Categorie </label>
                    <select name="categorie" class="form-control">
                        
                     {{#each categories}}
                        <option value="{{ this.titre }}">{{this.titre}}</option>
                    {{/each}}  
                    
                    </select>
                     <p style="color:red;"> ! Re-selectionner la categorie</p>

                </div>
                <br>
                <hr>
                        <textarea name="contenu">
                        
                                        {{article.contenu}}
                             
                        </textarea>
                <br>
                <hr>
                <button class="btn btn-success pull-right" type="submit">Modifier</button>
            </form>
        </div>
    </div>
</div>


 <script src='https://cloud.tinymce.com/stable/tinymce.min.js'></script>
<script>

var titre = $('.titre').text();
var image = $('.image').text();

$('#titre-input').val(titre);
$('#image-input').val(image);


tinymce.init({
selector: 'textarea',
height: 500,
plugins: [
    "advlist autolink lists link image charmap print preview anchor",
    "searchreplace visualblocks code fullscreen",
    "insertdatetime media table contextmenu paste imagetools"
],
toolbar: "insertfile undo redo | styleselect | bold italic | alignleft aligncenter alignright alignjustify | bullist numlist outdent indent | link image",
// imagetools_cors_hosts: ['www.tinymce.com', 'codepen.io'],
content_css: [
'//fonts.googleapis.com/css?family=Lato:300,300i,400,400i',
'//www.tinymce.com/css/codepen.min.css'
]
});
</script> 


